{
  "name": "doubanFMExt",
  "version": "1.0",
  "description": "Douban Radio Extension",
  "browser_action": {
    "popup": "popup.html",
    "default_icon": "img/icon-r.png"
  },
  "permissions": [
        "notifications",
		"tabs",
        "cookies",
		"background",
        "http://*.douban.fm/*",
        "http://*.douban.com/*",
		"http://api.fanfou.com/*",
		"http://fanfou.com/*",
		"http://*",
		"https://*"
    ],
   "background_page":"background.html",
   "options_page":"options.html"
}
